# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/crude_oil_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=crude_oil_db

# Environment
ENVIRONMENT=development

# API Keys (Optional - will use mock data if not provided)
EIA_API_KEY=your_eia_api_key_here
FRED_API_KEY=your_fred_api_key_here
NEWS_API_KEY=your_news_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Model Configuration
MODEL_VERSION=v1.0.0
SEQUENCE_LENGTH=60
BATCH_SIZE=32
EPOCHS=100
LEARNING_RATE=0.001

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Data Fetching Schedule (cron format)
DATA_FETCH_CRON=0 * * * *  # Every hour

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# GPU Configuration (auto-detect if available)
USE_GPU=auto
